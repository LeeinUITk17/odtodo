<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_generate_promo_codes_wizard_form" model="ir.ui.view">
            <field name="name">generate.promo.codes.wizard.form</field>
            <field name="model">restaurant_crm.generate_codes_wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Promotion Codes">
                    <group>
                        <field name="pool_id" options="{'no_create_edit': True}"/>
                        <field name="quantity"/>
                        <field name="code_prefix"/>
                        <field name="code_length"/>
                    </group>
                    <group string="Optional: Set Validity for this Batch">
                        <field name="valid_from"/>
                        <field name="valid_until"/>
                    </group>
                    <footer>
                        <button name="action_generate_codes" string="Generate Codes" type="object" class="btn-primary oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_open_generate_promo_codes_wizard" model="ir.actions.act_window">
            <field name="name">Generate Promotion Codes</field>
            <field name="res_model">restaurant_crm.generate_codes_wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
