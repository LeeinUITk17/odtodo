<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_crm_customer_tree" model="ir.ui.view">
            <field name="name">restaurant_crm.customer.tree</field>
            <field name="model">restaurant_crm.customer</field>
            <field name="arch" type="xml">
                <tree string="Customers">
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="birthday"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record id="view_crm_customer_form" model="ir.ui.view">
            <field name="name">restaurant_crm.customer.form</field>
            <field name="model">restaurant_crm.customer</field>
            <field name="arch" type="xml">
                <form string="Customer">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_memberships" type="object" class="oe_stat_button" icon="fa-users" help="View customer memberships">
                                <field name="membership_ids" widget="statinfo" string="Memberships"/>
                            </button>
                            <button name="action_view_logs" type="object" class="oe_stat_button" icon="fa-history" help="View customer activity logs">
                                <span class="o_stat_text">Logs</span>
                            </button>
                        </div>
                        <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="phone"/>
                                <field name="email" widget="email"/>
                            </group>
                            <group>
                                <field name="birthday"/>
                                <field name="customer_technical_id" readonly="1"/>
                                <field name="active" widget="boolean_toggle"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Memberships">
                                <field name="membership_ids" readonly="1">
                                    <tree>
                                        <field name="membership_technical_id"/>
                                        <field name="tier_id"/>
                                        <field name="points_balance"/>
                                        <field name="status"/>
                                        <field name="joined_at"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Activity Logs">
                                <field name="log_ids" readonly="1">
                                    <tree>
                                        <field name="create_date" string="Timestamp"/>
                                        <field name="log_type"/>
                                        <field name="content"/>
                                        <field name="user_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_crm_customer_search" model="ir.ui.view">
            <field name="name">restaurant_crm.customer.search</field>
            <field name="model">restaurant_crm.customer</field>
            <field name="arch" type="xml">
                <search string="Search Customers">
                    <field name="name" string="Name"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="customer_technical_id"/>
                    <filter string="Active" name="active" domain="[('active','=',True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_active" context="{'group_by':'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_crm_customer_window" model="ir.actions.act_window">
            <field name="name">Customers (CRM)</field>
            <field name="res_model">restaurant_crm.customer</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_crm_customer_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new customer record for CRM.
                </p>
            </field>
        </record>
    </data>
</odoo>
