<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_campaign_delivery_tree" model="ir.ui.view">
            <field name="name">restaurant_crm.campaign_delivery.tree</field>
            <field name="model">restaurant_crm.campaign_delivery</field>
            <field name="arch" type="xml">
                <tree string="Campaign Deliveries" create="false" delete="true">
                    <field name="campaign_id"/>
                    <field name="membership_id"/>
                    <field name="customer_name"/>
                    <field name="assigned_at"/>
                </tree>
            </field>
        </record>

        <record id="view_campaign_delivery_form" model="ir.ui.view">
            <field name="name">restaurant_crm.campaign_delivery.form</field>
            <field name="model">restaurant_crm.campaign_delivery</field>
            <field name="arch" type="xml">
                <form string="Campaign Delivery" create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="campaign_id" readonly="1"/>
                            <field name="membership_id" readonly="1"/>
                            <field name="customer_name" readonly="1"/>
                            <field name="assigned_at" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
