<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_point_transaction_tree" model="ir.ui.view">
            <field name="name">restaurant_crm.point_transaction.tree</field>
            <field name="model">restaurant_crm.point_transaction</field>
            <field name="arch" type="xml">
                <tree string="Point Transactions" default_order="create_date desc">
                    <field name="create_date" string="Transaction Date"/>
                    <field name="membership_id" string="Membership ID (Technical)" optional="hide"/>
                    <field name="customer_name" string="Customer"/>
                    <field name="type"/>
                    <field name="amount" sum="Total Points Moved"/>
                    <field name="description" optional="show"/>
                    <field name="source_reference" optional="show"/>
                    <field name="user_id" string="Processed By" optional="show"/>
                    <field name="expires_at" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_point_transaction_form" model="ir.ui.view">
            <field name="name">restaurant_crm.point_transaction.form</field>
            <field name="model">restaurant_crm.point_transaction</field>
            <field name="arch" type="xml">
                <form string="Point Transaction">
                    <sheet>
                        <group>
                            <group>
                                <field name="membership_id" options="{'no_create_edit': True}"/>
                                <field name="customer_id" readonly="1" force_save="1"/>
                                <field name="type"/>
                                <field name="amount"/>
                            </group>
                            <group>
                                <field name="transaction_technical_id" readonly="1"/>
                                <field name="create_date" string="Transaction Date" readonly="1"/>
                                <field name="user_id" readonly="1"/>
                                <field name="expires_at" attrs="{'invisible': [('type', 'not in', ['EARN', 'BONUS'])]}"/>
                            </group>
                        </group>
                        <group string="Details">
                            <field name="description"/>
                            <field name="source_reference"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_point_transaction_search" model="ir.ui.view">
            <field name="name">restaurant_crm.point_transaction.search</field>
            <field name="model">restaurant_crm.point_transaction</field>
            <field name="arch" type="xml">
                <search string="Search Point Transactions">
                    <field name="membership_id"/>
                    <field name="customer_name"/>
                    <field name="type"/>
                    <field name="source_reference"/>
                    <field name="description"/>
                    <filter string="Earned" name="earned_points" domain="[('type','=','EARN')]"/>
                    <filter string="Redeemed" name="redeemed_points" domain="[('type','=','REDEEM')]"/>
                    <filter string="Bonus" name="bonus_points" domain="[('type','=','BONUS')]"/>
                    <filter string="Adjustments" name="adjustments" domain="[('type','in', ['ADJUSTMENT_UP', 'ADJUSTMENT_DOWN'])]"/>
                    <separator/>
                    <filter string="Created Today" name="created_today" domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d 00:00:00'))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Membership" name="group_by_membership" context="{'group_by':'membership_id'}"/>
                        <filter string="Customer" name="group_by_customer" context="{'group_by':'customer_id'}"/>
                        <filter string="Type" name="group_by_type" context="{'group_by':'type'}"/>
                        <filter string="Processed By" name="group_by_user" context="{'group_by':'user_id'}"/>
                        <filter string="Transaction Month" name="group_by_transaction_month" context="{'group_by':'create_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_point_transaction_window" model="ir.actions.act_window">
            <field name="name">Point Transactions</field>
            <field name="res_model">restaurant_crm.point_transaction</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_point_transaction_search"/>
            <field name="context">{'search_default_created_today': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No point transactions found. Create one to adjust member points.
                </p>
            </field>
        </record>
    </data>
</odoo>
