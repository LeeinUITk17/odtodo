<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_promotion_code_tree" model="ir.ui.view">
            <field name="name">restaurant_crm.promotion_code.tree</field>
            <field name="model">restaurant_crm.promotion_code</field>
            <field name="arch" type="xml">
                <tree string="Promotion Codes" decoration-success="status=='ACTIVE'" decoration-muted="status=='EXPIRED' or status=='INACTIVE'" decoration-info="status=='REDEEMED'">
                    <field name="code"/>
                    <field name="pool_id"/>
                    <field name="discount_type" optional="hide"/>
                    <field name="discount_value" optional="hide"/>
                    <field name="status"/>
                    <field name="valid_from" optional="show"/>
                    <field name="valid_until" optional="show"/>
                    <field name="delivered_user_id" optional="show"/>
                    <field name="redeemed_at" optional="hide"/>
                </tree>
            </field>
        </record>

        <record id="view_promotion_code_form" model="ir.ui.view">
            <field name="name">restaurant_crm.promotion_code.form</field>
            <field name="model">restaurant_crm.promotion_code</field>
            <field name="arch" type="xml">
                <form string="Promotion Code">
                    <header>
                        <button name="action_redeem_code" string="Mark as Redeemed (Test)" type="object"
                                attrs="{'invisible': [('status', '!=', 'ACTIVE')]}"
                                context="{'default_customer_id': 1}"
                                confirm="This will mark the code as redeemed. Are you sure? (For testing purposes only)"
                                groups="base.group_system"/>
                        <field name="status" widget="statusbar" statusbar_visible="ACTIVE,REDEEMED,EXPIRED"/>
                    </header>
                    <sheet>
                        <group>
                            <group string="Code Details">
                                <field name="code" placeholder="Leave empty to auto-generate"/>
                                <field name="promo_technical_id" readonly="1"/>
                                <field name="pool_id" options="{'no_create_edit': True}" domain="[('active','=',True)]"/>
                            </group>
                            <group string="Validity and Assignment">
                                <field name="valid_from"/>
                                <field name="valid_until"/>
                                <field name="delivered_user_id" options="{'no_create_edit': True}" placeholder="Assign to a specific member (optional)"/>
                                <field name="customer_name" readonly="1" force_save="1"/>
                            </group>
                        </group>
                        <group string="Redemption Info" attrs="{'invisible': [('status', '!=', 'REDEEMED')]}">
                            <field name="redeemed_at" readonly="1"/>
                            <field name="redeemed_by_customer_id" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Promotion Pool Details (Read-only)">
                                <group>
                                    <group>
                                        <field name="discount_type" readonly="1"/>
                                        <field name="min_order_value" related="pool_id.min_order_value" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="discount_value" readonly="1"/>
                                        <field name="max_discount_value" related="pool_id.max_discount_value" readonly="1" attrs="{'invisible': [('discount_type', '!=', 'PERCENTAGE')]}"/>
                                        <field name="currency_symbol" readonly="1" attrs="{'invisible': [('discount_type', '!=', 'FIXED_AMOUNT')]}"/>
                                    </group>
                                </group>
                               <field name="pool_description" string="Pool Description" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_promotion_code_search" model="ir.ui.view">
            <field name="name">restaurant_crm.promotion_code.search</field>
            <field name="model">restaurant_crm.promotion_code</field>
            <field name="arch" type="xml">
                <search string="Search Promotion Codes">
                    <field name="code"/>
                    <field name="pool_id"/>
                    <field name="status"/>
                    <field name="delivered_user_id"/>
                    <field name="customer_name"/>
                    <filter string="Active" name="active_codes" domain="[('status','=','ACTIVE')]"/>
                    <filter string="Redeemed" name="redeemed_codes" domain="[('status','=','REDEEMED')]"/>
                    <filter string="Expired" name="expired_codes" domain="[('status','=','EXPIRED')]"/>
                    <filter string="Inactive" name="inactive_codes" domain="[('status','=','INACTIVE')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Pool" name="group_by_pool" context="{'group_by':'pool_id'}"/>
                        <filter string="Status" name="group_by_status" context="{'group_by':'status'}"/>
                        <filter string="Assigned Customer" name="group_by_delivered_customer" context="{'group_by':'delivered_user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_promotion_code_window" model="ir.actions.act_window">
            <field name="name">Promotion Codes</field>
            <field name="res_model">restaurant_crm.promotion_code</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_promotion_code_search"/>
            <field name="context">{'search_default_active_codes': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Manage individual promotion codes.
                </p>
            </field>
        </record>

        <record id="ir_cron_expire_promotion_codes" model="ir.cron">
            <field name="name">CRM: Expire Outdated Promotion Codes</field>
            <field name="model_id" ref="model_restaurant_crm_promotion_code"/>
            <field name="state">code</field>
            <field name="code">model.action_expire_codes()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
