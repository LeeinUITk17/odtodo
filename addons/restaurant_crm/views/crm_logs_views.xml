<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_crm_logs_tree" model="ir.ui.view">
            <field name="name">restaurant_crm.logs.tree</field>
            <field name="model">restaurant_crm.logs</field>
            <field name="arch" type="xml">
                <tree string="Activity Logs" default_order="create_date desc">
                    <field name="create_date" string="Timestamp"/>
                    <field name="customer_name"/>
                    <field name="log_type"/>
                    <field name="content" string="Details"/>
                    <field name="user_id" string="Responsible"/>
                </tree>
            </field>
        </record>

        <record id="view_crm_logs_form" model="ir.ui.view">
            <field name="name">restaurant_crm.logs.form</field>
            <field name="model">restaurant_crm.logs</field>
            <field name="arch" type="xml">
                <form string="Activity Log">
                    <sheet>
                        <group>
                            <group>
                                <field name="customer_id"/>
                                <field name="log_type"/>
                                <field name="user_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="log_technical_id" readonly="1"/>
                                <field name="create_date" string="Timestamp" readonly="1"/>
                            </group>
                        </group>
                        <group string="Details">
                            <field name="content" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_crm_logs_search" model="ir.ui.view">
            <field name="name">restaurant_crm.logs.search</field>
            <field name="model">restaurant_crm.logs</field>
            <field name="arch" type="xml">
                <search string="Search Logs">
                    <field name="customer_id"/>
                    <field name="log_type"/>
                    <field name="content" string="Details"/>
                    <field name="user_id"/>
                    <!-- <filter string="Today" name="today_logs" domain="[('create_date', '>=', context_today().strftime('%Y-%m-%d 00:00:00')), ('create_date', '<=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/> -->
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="group_by_customer" context="{'group_by':'customer_id'}"/>
                        <filter string="Log Type" name="group_by_log_type" context="{'group_by':'log_type'}"/>
                        <filter string="Responsible" name="group_by_user" context="{'group_by':'user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_crm_logs_window" model="ir.actions.act_window">
            <field name="name">Activity Logs (CRM)</field>
            <field name="res_model">restaurant_crm.logs</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_crm_logs_search"/>
            <field name="context">{'search_default_today_logs': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No activity logs found. You can create logs manually or they will be generated by system actions.
                </p>
            </field>
        </record>
    </data>
</odoo>
