    <data>
        <!-- ====================================================== -->
        <!--                     Main CRM Root Menu                 -->
        <!-- ====================================================== -->
        <menuitem id="menu_restaurant_crm_root"
                  name="Restaurant CRM"
                  sequence="10"
                  web_icon="restaurant_crm,static/description/icon.png"/> <!-- Đảm bảo có icon này -->

        <!-- ====================================================== -->
        <!--                     Customers Section                  -->
        <!-- ====================================================== -->
        <menuitem id="menu_crm_customer"
                  name="Customers"
                  parent="menu_restaurant_crm_root"
                  action="action_crm_customer_window" 
                  sequence="10"/>

        <!-- ====================================================== -->
        <!--                  Loyalty Program Section               -->
        <!-- ====================================================== -->
        <menuitem id="menu_crm_loyalty_program_main" 
                  name="Loyalty Program"
                  parent="menu_restaurant_crm_root"
                  sequence="20"/>

            <menuitem id="menu_crm_membership"
                      name="Memberships"
                      parent="menu_crm_loyalty_program_main"
                      action="action_membership_window" 
                      sequence="10"/>

            <menuitem id="menu_crm_point_transaction"
                      name="Point Transactions"
                      parent="menu_crm_loyalty_program_main"
                      action="action_point_transaction_window" 
                      sequence="20"/>
            <!-- Membership Tiers được chuyển vào Configuration -->


        <!-- ====================================================== -->
        <!--                 Marketing & Promotions Section         -->
        <!-- ====================================================== -->
        <!-- Sẽ thêm menu cho Marketing Campaigns ở đây sau -->
        
        <menuitem id="menu_crm_marketing_main"
                  name="Marketing"
                  parent="menu_restaurant_crm_root"
                  sequence="30"/> 

            <menuitem id="menu_crm_marketing_campaigns"
                      name="Campaigns"
                      parent="menu_crm_marketing_main"
                      action="action_marketing_campaign_window"
                      sequence="10"/>
       

        <!-- ====================================================== -->
        <!--                     Activity Logs Section              -->
        <!-- ====================================================== -->
        <menuitem id="menu_crm_logs"
                  name="Activity Logs"
                  parent="menu_restaurant_crm_root"
                  action="action_crm_logs_window" 
                  sequence="100"/>


