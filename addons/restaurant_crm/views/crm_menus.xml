        <!--                     Configuration Section              -->
        <!-- ====================================================== -->
        <menuitem id="menu_crm_configuration_root"
                  name="Configuration"
                  parent="menu_restaurant_crm_root"
                  groups="base.group_system" 
                  sequence="200"/>

            <!-- Configuration > Loyalty Settings -->
            <menuitem id="menu_crm_config_loyalty_settings"
                      name="Loyalty Settings"
                      parent="menu_crm_configuration_root"
                      sequence="10"/>

                <menuitem id="menu_crm_config_membership_tier" 
                          name="Membership Tiers"
                          parent="menu_crm_config_loyalty_settings"
                          action="action_membership_tier_window" 
                          sequence="10"/>
                <!-- Thêm các cấu hình Loyalty khác ở đây nếu có (vd: Cấu hình tỷ lệ tích điểm) -->


            <!-- Configuration > Promotion Settings -->
            <menuitem id="menu_crm_config_promotion_settings"
                      name="Promotion Settings"
                      parent="menu_crm_configuration_root"
                      sequence="20"/>

                <menuitem id="menu_crm_config_promotion_pool"
                          name="Promotion Pools"
                          parent="menu_crm_config_promotion_settings"
                          action="action_promotion_pool_window" 
                          sequence="10"/>

                <menuitem id="menu_crm_config_promotion_code"
                          name="Promotion Codes"
                          parent="menu_crm_config_promotion_settings"
                          action="action_promotion_code_window" 
                          sequence="20"/>
                <!-- Thêm các cấu hình Promotion khác ở đây nếu có -->

