<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_todo_form" model="ir.ui.view">
        <field name="name">todo.form</field>
        <field name="model">todo.todo</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="is_done"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_todo_tree" model="ir.ui.view">
        <field name="name">todo.tree</field>
        <field name="model">todo.todo</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="is_done"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_todo_root" name="Todo App"/>

    <menuitem id="menu_todo_main" name="Tasks" parent="menu_todo_root"/>

    <record id="action_todo_tasks" model="ir.actions.act_window">
        <field name="name">Todo Tasks</field>
        <field name="res_model">todo.todo</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_todo_tasks" name="Manage Tasks"
              parent="menu_todo_main" action="action_todo_tasks"/>
</odoo>
