<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="module_category_restaurant_management" model="ir.module.category">
            <field name="name">Restaurant</field>
            <field name="description">User access levels for Restaurant Management module.</field>
            <field name="sequence">25</field>
        </record>

        <record id="group_restaurant_waiter" model="res.groups">
            <field name="name">Waiter</field>
            <field name="category_id" ref="module_category_restaurant_management"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">User can create/manage orders and customers.</field>
        </record>

        <record id="group_restaurant_cashier" model="res.groups">
            <field name="name">Cashier</field>
            <field name="category_id" ref="module_category_restaurant_management"/>
            <field name="implied_ids" eval="[(4, ref('group_restaurant_waiter'))]"/>
            <field name="comment">User can manage reservations, orders, invoices, and customers.</field>
        </record>

        <record id="group_restaurant_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_restaurant_management"/>
            <field name="implied_ids" eval="[(4, ref('group_restaurant_cashier'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
            <field name="comment">User has full access to all Restaurant features and configurations.</field>
        </record>

        <record id="order_branch_rule_user" model="ir.rule">
            <field name="name">Order: Branch User Access</field>
            <field name="model_id" ref="model_restaurant_management_order"/>
            <field name="domain_force">[('branch_uuid', 'in', user.branch_id.ids)]</field>
            <field name="groups" eval="[(6, 0, [ref('group_restaurant_waiter'), ref('group_restaurant_cashier')])]"/>
            <field name="global" eval="True"/>
        </record>

        <record id="order_branch_rule_manager" model="ir.rule">
            <field name="name">Order: Manager Full Access</field>
            <field name="model_id" ref="model_restaurant_management_order"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(6, 0, [ref('group_restaurant_manager')])]"/>
            <field name="global" eval="False"/>
        </record>

        <record id="reservation_branch_rule_user" model="ir.rule">
            <field name="name">Reservation: Branch User Access</field>
            <field name="model_id" ref="model_restaurant_management_reservation"/>
            <field name="domain_force">[('branch_uuid', 'in', user.branch_id.ids)]</field>
            <field name="groups" eval="[(6, 0, [ref('group_restaurant_waiter'), ref('group_restaurant_cashier')])]"/>
            <field name="global" eval="True"/>
        </record>

        <record id="reservation_branch_rule_manager" model="ir.rule">
            <field name="name">Reservation: Manager Full Access</field>
            <field name="model_id" ref="model_restaurant_management_reservation"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(6, 0, [ref('group_restaurant_manager')])]"/>
            <field name="global" eval="False"/>
        </record>

        <record id="table_branch_rule_user" model="ir.rule">
            <field name="name">Table: Branch User Access</field>
            <field name="model_id" ref="model_restaurant_management_table"/>
            <field name="domain_force">[('branch_uuid', 'in', user.branch_id.ids)]</field>
            <field name="groups" eval="[(6, 0, [ref('base.group_user')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="global" eval="True"/>
        </record>

        <record id="table_branch_rule_manager" model="ir.rule">
            <field name="name">Table: Manager Full Access</field>
            <field name="model_id" ref="model_restaurant_management_table"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(6, 0, [ref('group_restaurant_manager')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="global" eval="False"/>
        </record>

        <record id="menuitem_branch_rule_user" model="ir.rule">
            <field name="name">MenuItem: Branch User Access</field>
            <field name="model_id" ref="model_restaurant_management_menuitem"/>
            <field name="domain_force">[('branch_uuid', 'in', user.branch_id.ids)]</field>
            <field name="groups" eval="[(6, 0, [ref('base.group_user')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="global" eval="True"/>
        </record>

        <record id="menuitem_branch_rule_manager" model="ir.rule">
            <field name="name">MenuItem: Manager Full Access</field>
            <field name="model_id" ref="model_restaurant_management_menuitem"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(6, 0, [ref('group_restaurant_manager')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="global" eval="False"/>
        </record>

        <record id="invoice_branch_rule_user" model="ir.rule">
            <field name="name">Invoice: Branch User Access</field>
            <field name="model_id" ref="model_restaurant_management_invoice"/>
            <field name="domain_force">[('order_uuid.branch_uuid', '=', user.branch_id.id)]</field>
            <field name="groups" eval="[(6, 0, [ref('group_restaurant_waiter'), ref('group_restaurant_cashier')])]"/>
            <field name="global" eval="True"/>
        </record>

        <record id="invoice_branch_rule_manager" model="ir.rule">
            <field name="name">Invoice: Manager Full Access</field>
            <field name="model_id" ref="model_restaurant_management_invoice"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(6, 0, [ref('group_restaurant_manager')])]"/>
            <field name="global" eval="False"/>
        </record>
    </data>
</odoo>
